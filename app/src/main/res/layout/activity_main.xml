<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mehta.deepank.firstprojectudacity.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/ccd"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:text="Cafe Coffee Day"
        android:textSize="32sp"
        android:fontFamily="sans-serif"
        android:paddingTop="10dp"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:text="Coffee at its best!! The world's no. 1 coffee near you."
        android:textSize="22sp"
        android:paddingLeft="32dp"
        android:fontFamily="sans-serif-medium"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:text="123, YZ Block, Cannaught Place, New Delhi-110001"
        android:textSize="20sp"
        android:paddingLeft="32dp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="011-21212121"
        android:textSize="20sp"
        android:paddingLeft="32dp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="bookings@ccd.com"
        android:textSize="20sp"
        android:paddingLeft="32dp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="10am to 10pm"
        android:textSize="20sp"
        android:paddingLeft="32dp"
        android:fontFamily="sans-serif-medium"/>


</LinearLayout>
